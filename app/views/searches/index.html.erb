

<%= form_for(@search) do |f| %>
  <% if @search.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@search.errors.count, "error") %> prohibited this search </h2>

      <ul>
      <% @search.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if current_user %>
       <div align="center" class="form-group" >
          <div>
            <h4>Search with Twitter!</h4>

            <%= f.text_field :info, placeholder: "type key word" %>
          </div>
          <div class="actions">
            <%= f.submit "Go find!",  class: "btn btn-primary" %>
          </div>

        </div>

      <% else %>
      <div align="center">
      <h3> Please sing in first! </h3>
      </div>
   <% end %>
  <% end %>
