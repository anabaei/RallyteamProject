<!DOCTYPE html>
<html>
  <head>
    <title>Rallyteam</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav ">
            <li><%= link_to 'Search', root_path %></li>
          </ul>
          <% if current_user %>
            <ul class="nav navbar-nav ">
              <li><%= link_to 'My Favorites', users_index_path %> </li>
             <li>
              <%= link_to "<button class=\"btn btn-success\">Tweet something cool!</button>".html_safe, tweets_path %>
             </li>
             </ul>
            <ul class="nav navbar-nav navbar-right">
              <li style="color: white; margin-top:10%;">Hello <%= current_user.name %></li>
              <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
            </ul>
          <% else %>
            <ul class="nav navbar-nav navbar">
               <li><%= link_to "Sign in with Twitter", "/auth/twitter" %></li>
            </ul>
          <% end %>
      </div>
    </div>
  </nav>
 <br> <br><br><br>
    <% if current_user %>
    <div align="center">
      
       <%= image_tag(current_user.image_profile , size: "85x85", :alt => "rss feed", :class => "img-circle") %>
       <%= current_user.name %>
    </div>
    <% end %>
    <div class="col col-md-4 col-xs-12"> </div>
    <div class="content col col-md-4 col-xs-12" >
      <% if flash[:notice] %>
       <div class='alert alert-success'>
         <%= flash[:notice] %>
       </div>
      <% elsif flash[:alert] %>
       <div class='alert alert-danger'>
         <%= flash[:alert] %>
       </div>
      <% elsif flash[:success] %>
        <div class='alert alert-success'>
         <%= flash[:alert] %>
       </div>
      <% end %>
      <%= yield %>
    </div>
    <div class="col col-md-4 col-xs-12"> </div>
  </body>
</html>
